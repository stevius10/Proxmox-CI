[core]
    repositoryformatversion = 0
    filemode = true
    bare = false
    logallrefupdates = true

[remote "origin"]
    url = <%= node['git']['git_repo_ssh'] %>/<%= @repo %>.git
    fetch = +refs/heads/*:refs/remotes/origin/*

[branch "<%= node['git']['git_default_branch'] %>"]
    remote = origin
    merge = refs/heads/<%= node['git']['git_default_branch'] %>
