; Gitea Application Configuration

APP_NAME = Gitea
RUN_USER = <%= node['git']['app']['user'] %>
RUN_MODE = prod

[database]
DB_TYPE  = sqlite3
PATH     = <%= node['git']['data_dir'] %>/gitea.db

[repository]
ROOT = <%= node['git']['data_dir'] %>/gitea-repositories

[server]
DOMAIN       = <%= node['ip'] %>
HTTP_PORT    = <%= node['git']['port'] %>
ROOT_URL     = http://<%= node['ip'] %>:<%= node['git']['port'] %>/
DISABLE_SSH  = false
SSH_PORT     = 22
START_SSH_SERVER = false

[security]
INSTALL_LOCK = true
SECRET_KEY   = <%= (0...32).map { ('a'..'z').to_a[rand(26)] }.join %>

[service]
ENABLE_REGISTERATION_CAPTCHA = false

[actions]
ENABLED = true
