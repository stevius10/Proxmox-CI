[Unit]
Description=Gitea (Git Server)
After=network.target

[Service]
Type=simple
User=<%= node['git']['app_user'] %>
Group=<%= node['git']['app_group'] %>
WorkingDirectory=<%= node['git']['data_dir'] %>
ExecStart=<%= node['git']['install_dir'] %>/gitea web --config <%= node['git']['install_dir'] %>/app.ini
Restart=on-failure
Environment=USER=<%= node['git']['app_user'] %> HOME=/home/<%= node['git']['app_user'] %>

[Install]
WantedBy=multi-user.target
